# Final System: bash
# Build under chroot

CC=clang CXX=clang++ \
./configure --prefix=/usr                       \
            --docdir=/usr/share/doc/bash-5.2.15 \
            --without-bash-malloc               \
            --with-installed-readline \
            --with-curses \
            gl_cv_func_working_acl_get_file=yes \
            ac_cv_lib_error_at_line=no \
            ac_cv_header_sys_cdefs_h=no

make && make install
