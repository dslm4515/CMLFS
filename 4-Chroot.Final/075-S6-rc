# Final System: S6-RC
# Build under chroot

CC=clang CXX=clang++ \
./configure --exec-prefix=/usr      \
            --prefix=/usr           \
            --enable-shared         \
            --enable-static         \
            --enable-allstatic      \
            --enable-static-libc    \
            --libdir=/usr/lib       \
            --libexecdir=/usr/lib/s6-rc \
            --with-dynlib=/usr/lib
make
make install
