# cgnutools: Kernel Headers
# Build as cmlfs user

# Clean the source
make mrproper

# Build the headers
ARCH=${CMLFS_ARCH} make headers

# Install the headers for stage 0 clang
find usr/include \( -name .install -o -name ..install.cmd \) -exec rm -vf {} \;
cp -rv usr/include/* /cgnutools/include/
rm -v /cgnutools/include/Makefile

