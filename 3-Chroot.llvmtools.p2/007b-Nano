# llvmtools: nano
# Build and install in chroot
# Optional package: Text editor for convenience or trouble shooting

# Set flags, so ncurses header can be found in /tools/include
export LDFLAGS="-L/llvmtools/lib -lncursesw "
export CPPFLAGS="-I/llvmtools/include"

# Configure source to use LLVM's binary tools
CC=clang CXX=clang++ \
AR=llvm-ar \
AS=llvm-as \
RANLIB=llvm-ranlib \
LD=ld.lld \
STRIP=llvm-strip \
./configure --prefix=/llvmtools \
            --enable-tiny

# Build and install to llvmtools
make && make install

unset LDFLAGS CPPFLAGS
