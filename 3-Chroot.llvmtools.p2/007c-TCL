# llvmtools: TCL
# Build under chroot
# Optional package used for testing final system packages

# Build will expect ar. Create a link for it:
#ln -sv llvm-ar /llvmtools/bin/ar

cd unix

# Configure source
CC=clang \
CXX=clang++ \
LD=ld.lld \
./configure --prefix=/llvmtools

# Build and install to toolchain
make && make install

# Install Headers and create link
chmod -v u+w /llvmtools/lib/libtcl8.6.so
make install-private-headers
ln -sv tclsh8.6 /llvmtools/bin/tclsh
