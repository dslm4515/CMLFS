# llvmtools: CMake
# Build and install in chroot

./bootstrap --prefix=/llvmtools \
  --no-system-jsoncpp  \
  --no-system-librhash \
  --no-system-curl \
  --no-system-libarchive \
  --no-system-nghttp2 \
  --no-system-expat \
  --no-system-libuv -- -DCMAKE_USE_OPENSSL=OFF \
  -DBUILD_CursesDialog=ON \
  -DCURSES_CURSES_LIBRARY=/llvmtools/lib/libcursesw.so \
  -DCURSES_EXTRA_LIBRARY=/llvmtools/lib/libtinfow.so \
  -DCURSES_FORM_LIBRARY=/llvmtools/lib/libformw.so \
  -DCURSES_INCLUDE_PATH=/llvmtools/include \
  -DCURSES_NCURSES_LIBRARY=/llvmtools/lib/libncursesw.so

# Build and install to llvmtools
make && make install
