# llvmtools: gawk
# Build as cmlfs

# Configure source
CC=clang CXX=clang++ \
AR=llvm-ar \
AS=llvm-as \
RANLIB=llvm-ranlib \
LD=ld.lld \
STRIP=llvm-strip \
./configure --prefix=/llvmtools \
            --build=${TARGET_TUPLE} \
            --host=${TARGET_TUPLE}

# Compile
make

# Install to llvmtools
make install
