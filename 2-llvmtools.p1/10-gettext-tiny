# llvmtools: gettext-tiny
# Build as cmlfs
#

# Configure source:
CC=clang \
CXX=clang++ \
AR=llvm-ar \
AS=llvm-as \
RANLIB=llvm-ranlib \
LD=ld.lld \
STRIP=llvm-strip \
make LIBINTL=MUSL prefix=/llvmtools

# Install the msgfmt, msgmerge and xgettext programs to toolchain
cp -v autopoint msgfmt msgmerge xgettext /llvmtools/bin
