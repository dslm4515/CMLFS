# Final System: Xz
# This section is done in Chroot environment

CC=clang CXX=clang++ \
./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/xz-5.4.0

make && make install

# Fix the binaries to use the correct dynamic loader:
for b in lzcat lzmadec lzmainfo xz xzdec
do
patchelf --set-interpreter /lib/ld-musl-x86_64.so.1 /usr/bin/$b
done
