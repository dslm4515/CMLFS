# Final System: Ncurses
# This section is done in Chroot environment

# Don't install a static library that is not
# handled by configure:
sed -i '/LIBTOOL_INSTALL/d' c++/Makefile.in

# Configure source
./configure --prefix=/usr           \
            --mandir=/usr/share/man \
            --with-shared           \
            --without-debug         \
            --without-normal        \
            --enable-pc-files       \
            --enable-widec          \
            --with-pkg-config-libdir=/usr/lib/pkgconfig

# Build and install
make && make install

# Fix the binaries to use the correct dynamic loader:
for b in clear infocmp tabs tic toe tput tset
do
patchelf --set-interpreter /lib/ld-musl-x86_64.so.1 /usr/bin/$b
done

# Allow linker to be able to find non-wide-character Ncurses libraries
for lib in ncurses form panel menu ; do
    rm -vf                    /usr/lib/lib${lib}.so
    echo "INPUT(-l${lib}w)" > /usr/lib/lib${lib}.so
    ln -sfv ${lib}w.pc        /usr/lib/pkgconfig/${lib}.pc
done

# Make sure that old applications that look for -lcurses at build time are
# still buildable:
rm -vf                     /usr/lib/libcursesw.so
echo "INPUT(-lncursesw)" > /usr/lib/libcursesw.so
ln -sfv libncurses.so      /usr/lib/libcurses.so
