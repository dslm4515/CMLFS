# Final System: Xz-utils
# This section is done in Chroot environment

CC=$CC CXX=$CXX \
./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/xz-5.4.2

make && make install

# Set the dynamic loader for each executable
for b in lzcat lzmadec lzmainfo xz xzdec
do
   setDL /usr/bin/$b
done
